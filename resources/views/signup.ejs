<main class="page-center">
  <div class="sign-up sign-up-container">
    <h1 class="sign-up__title">Created Account</h1>
    <p class="sign-up__subtitle">Let's Start with ConnectMe</p>

    <form class="sign-up-form form" action="<%= formUrl %>" method="post">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label class="form-label-wrapper">
        <p class="form-label">Name</p>
        <input class="form-input" lowercase="true" name="name" value="<%= formDefaultValue.name %>" type="text" placeholder="Enter your name" >
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Email</p>
        <input class="form-input" lowercase="true" name="email" value="<%= formDefaultValue.email %>" type="email" placeholder="Enter your email address" >
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Mobile Number</p>
        <input class="form-input" lowercase="true" name="mobile_number" value="<%= formDefaultValue.mobile_number %>" type="number" placeholder="Mobile Number With Country Code (min and max 12 digit)">
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Password</p>
        <input class="form-input" name="password" type="password" placeholder="Enter your password" >
      </label>
      <label class="form-label-wrapper">
        <p class="form-label">Security</p>
        <input class="form-input" lowercase="true" name="pin" value="<%= formDefaultValue.pin %>" type="number" placeholder="Security Pin" >
      </label>

      <% if(rolesDropdown ==  true){ %>
      <label class="form-label-wrapper">
        <p class="form-label">Role</p>
        <select name="roleValue" class="form-input">
          <% for (var i=0; i < roles.length; i++) { %>
          <option value="<%= roles[i].name %>">
            <%= roles[i].label %>
          </option>
          <% } %>
        </select>
      </label>
      <% } %>

      <button type="submit" class="form-btn primary-default-btn transparent-btn">Sign Up</button>

      <br>
      <a class="link-info forget-link" style="display: flex;flex-direction: row;align-items: center;justify-content: center;" href="<%= base_url('login') %>"><span class="icon login"></span> Login Into Account</a>
    </form>
  </div>
</main>